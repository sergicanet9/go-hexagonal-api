VERSION=docker
ENV=local
HOST_PORT_MONGOAPI=8081
HOST_PORT_POSTGRESAPI=8082
CONTAINER_PORT=80

MONGO_HOST_PORT=4041
MONGO_CONTAINER_PORT=27017
MONGO_HOST=mongo
MONGO_DB=gohexagonalapi
MONGO_USER=mongo
MONGO_PASSWORD=admin
MONGO_DSN=mongodb://$MONGO_USER:$MONGO_PASSWORD@$MONGO_HOST:$MONGO_CONTAINER_PORT/$MONGO_DB?authSource=admin

MONGO_EXPRESS_HOST_PORT=9999
MONGO_EXPRESS_CONTAINER_PORT=8081
MONGO_EXPRESS_LOGIN_USERNAME=mongo
MONGO_EXPRESS_LOGIN_PASSWORD=mongo

POSTGRES_HOST_PORT=4042
POSTGRES_CONTAINER_PORT=5432
POSTGRES_HOST=postgres
POSTGRES_DB=gohexagonalapi
POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin
POSTGRES_DSN=postgres://$POSTGRES_USER:$POSTGRES_PASSWORD@$POSTGRES_HOST:$POSTGRES_CONTAINER_PORT/$POSTGRES_DB?sslmode=disable

PGADMIN_HOST_PORT=8888
PGADMIN_CONTAINER_PORT=80
PGADMIN_LOGIN_EMAIL=postgres@gohexagonalapi.com
PGADMIN_LOGIN_PASSWORD=postgres