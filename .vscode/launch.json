    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch with Mongo",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceRoot}/cmd",
            "cwd": "${workspaceRoot}",
            "args": [
                "--ver", "debug",
                "--env", "local",
                "--port", "8080",
                "--db", "mongo",
                "--dsn", "mongodb://localhost:4041/gohexagonalapi"
            ]
        },
        {
            "name": "Launch with Postgres",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceRoot}/cmd",
            "cwd": "${workspaceRoot}",
            "args": [
                "--ver", "debug",
                "--env", "local",
                "--port", "8080",
                "--db", "postgres",
                "--dsn", "postgres://postgres:admin@localhost:4042/gohexagonalapi?sslmode=disable"
            ]
        }
    ]
}